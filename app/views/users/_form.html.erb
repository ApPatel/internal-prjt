 <div class="scalfoldloginform">
  <%= form_for @user, :html => { :id => "form" }do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table><div class="field">
    <tr><td class="labelstyle"><%= f.label :email %></td>
    <td><%= f.text_field :email, :size => 20 %></td></tr>
  </div>
 
  <% if @current_method == "new" %>
    <div class="field">
      <tr><td class="labelstyle"><%= f.label :password %></td>
      <td><%= f.password_field :password, :size => 20 %></td></tr>
    </div>
    <div class="field">
      <tr><td class="labelstyle"><%= f.label :password_confirmation %></td>
      <td><%= f.password_field :password_confirmation, :size => 20%></td></tr>
    </div>
  <% end %>
   <% for role in Role.find(:all) %>
    <div><tr><td></td>
     <td>  <%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
     <%= role.name %></td></tr>
    </div>
  <% end %>
 

   <tr><td></td><td><div class="actions">
   
    <%= f.submit%>


  </div></td></tr>
</table>
