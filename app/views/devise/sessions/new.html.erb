<div id="login" class="loginform">
  <div class="signinname">Sign in</div>
</div>

  <div class="loginform1">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
 <table><tr><td class="labelstyle">	<%= f.label :email %></td>
  <td><%= f.email_field :email, :size => 25 %></td></tr>

 <tr><td class="labelstyle"><%= f.label :password %></td>
  <td><%= f.password_field :password ,:size => 25%></td></tr>

  <% if devise_mapping.rememberable? -%>
    <tr><td></td><td><%= f.check_box :remember_me %> <%= f.label :remember_me %></td></tr>
  <% end -%>


  
  	   <tr><td></td><td><%= f.submit "Sign in", :class=>"button"%></td></tr>
       </table>
<% end %>

<%= link_to "Forgot your password?", new_password_path(resource_name) ,:class=>"forgotpassword"%><br />

<font class="signup">Dont have an account <%= link_to "Sign up", new_registration_path(resource_name) ,:class=>"labelstyle"%> now </font>

</div>










