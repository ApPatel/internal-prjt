


  	
  		<div id="login" class="animate form">
  		<div class="listheading"><div class="fontstyling"><h2>Sign in</h2></div></div>
      <div class="wrapper2">
  			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
 <table><tr><td>	<%= f.label :email %></td>
  <td><%= f.email_field :email %></td></tr>

 <tr><td><%= f.label :password %></td>
  <td><%= f.password_field :password %></td></tr>

  <% if devise_mapping.rememberable? -%>
    <tr><td><%= f.check_box :remember_me %> <%= f.label :remember_me %></td></tr>
  <% end -%>
</table>
 <div class="signin">
  	  <p class="login button">
  	   <%= f.submit "Sign in" %></p>
<% end %>
