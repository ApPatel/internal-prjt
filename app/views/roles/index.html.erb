<div class="fontstyling">
<h1>Listing Roles</h1>
  </div>
<% if @roles.empty? %>
<div class="noevents"><h5>No Roles</h5></div>
<% else%>

<table class="tablesorter" id="my_table">
<thead>
  <tr>
    <th>Name</th>
    <th>Edit</th><th>Delete</th>
  
  </tr>
</thead><tbody>
<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
     <td id="actioncolumn"> <%= link_to(image_tag("editIcon.png",:height=>20,:width=>20), edit_role_path(role)) %></td>
    <td id="actioncolumn"><%= link_to(image_tag("delete.png"),role, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
  </tr>
<% end %>
</tbody>
</table>
<% end %>

<br />

<script type="text/javascript">
 $(document).ready(function()
    {
             $("#my_table").tablesorter();
    }
);

</script>
